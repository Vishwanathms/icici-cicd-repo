pipeline {
    agent { label 'java' }
    tools { maven 'maven-3.9.8' }

    stages {
        stage('checkout') {
            steps {
                sh "ls -l"
                sh "ssh-keyscan -t rsa  github.com >> /var/jenkins_home/.ssh/known_hosts  || true"
            }
        }
        stage('Build') {
            steps {
                echo 'Building...' 
                sh "mvn clean package -DskipTests"

                // Add build steps here
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                mvn test 
                //mvn verify
                // Add test steps here
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh "sudo cp target/mvn-hello-world.war /home/ubuntu/war_fold/mvn-hello-world.war"
                sh "sudo cp -r target/mvn-hello-world  /home/ubuntu/war_fold/"
                // Add deploy steps here
            }
        }
    }
}